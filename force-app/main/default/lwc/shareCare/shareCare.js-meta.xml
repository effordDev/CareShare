<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <isExposed>true</isExposed>

    <description>A Component to help with Programmatic Sharing</description>

    <targets>
        <target>lightning__AppPage</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__AppPage">
            <property label="Pick Profile" name="profile" type="String" required="true" datasource="apex://ProfilePicker"/>
            <property label="Pick Object" name="sobject" type="String" required="true" datasource="apex://SObjectPicker"/>
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>